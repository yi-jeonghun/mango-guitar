	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<title>{TITLE}</title>
	<link rel="icon" type="image/x-icon" href="/img/favicon.png">

	<meta name="description" content="{DESCRIPTION}">
	<meta name="keywords" content="{KEYWORDS}">

	<script type="text/javascript" src="/lib/jquery-3.4.1.min.js"></script>
	<script type="text/javascript" src="/lib/bootstrap-4.3.1-dist/js/bootstrap.min.js"></script>

	<link rel="stylesheet" type="text/css" href="/css/nanumgothiccoding.css">
	<link rel="stylesheet" type="text/css" href="/lib/bootstrap-4.3.1-dist/css/bootstrap.min.css">
	<link href="/lib/fontawesome-free-5.10.1-web/css/fontawesome.css" rel="stylesheet">
	<link href="/lib/fontawesome-free-5.10.1-web/css/brands.css" rel="stylesheet">
	<link href="/lib/fontawesome-free-5.10.1-web/css/solid.css" rel="stylesheet">
	<link href="/css/guitar_chord_chart_style.css" rel="stylesheet">
	<link href="/css/chords.css" rel="stylesheet">
	<link href="/css/head.css" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="/css/chord_player_style.css">

</head>
<body>

<!--=============================== HEAD ==================================-->
<div id="id_div_head" include-html="head.html">
	{INCLUDE_HTML:HEAD}
</div>
<!--=============================== HEAD ==================================-->	

<div class="container">
	<div class="row border-bottom" id="id_div_title_area">
		<div class="col-11 col-sm-9">
			<div class="">
				<h5 id="id_label_title" class="py-1">{LABEL_TITLE}</h5>
			</div>
			<div id="id_label_artist">{LABEL_ARTIST}</div>
		</div>
		<div class="col-1 col-sm-3">
			<div id="id_MP_div_video" class="MP_div_video_sm flex">
				<div id="id_MP_player" class="MP_player_sm"></div>
			</div>
		</div>
	</div>
	<div class="row py-0 border-bottom py-2" id="id_div_control_pannel">
		<div class="col-5">
			<canvas class="" id="metronome" width="" height="6px" style=""></canvas>
		</div>
		<div class="col-5 d-flex">
			<div class="capo-div">
				Capo
				<select id="id_select_capo">
					<option value="0">0</option>
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
					<option value="6">6</option>
					<option value="7">7</option>
					<option value="8">8</option>
					<option value="9">9</option>
					<option value="10">10</option>
					<option value="11">11</option>
					<option value="12">12</option>
					<option value="13">13</option>
					<option value="14">14</option>
					<option value="15">15</option>
				</select>
			</div>
			<div class="speed-div">
				Speed
				<span class="text-center mx-2" id="id_label_speed">1.0</span>
				<span class="badge badge-sm border" style="cursor:pointer" id="id_btn_speed_minus">-</span>
				<span class="badge badge-sm border" style="cursor:pointer" id="id_btn_speed_plus">+</span>	
			</div>
			<div class="volume-div d-flex">
				<div>Volume</div>
				<div class="volume-slide-div">
					<input class="" type="range" min="0" max="100" value="50" id="id_slider_volume" style="width: 100%;">
				</div>
			</div>
		</div>
		<div class="col-2 text-right">
			<div class="button-div">
				<!-- <button type="button" class="btn btn-sm btn-primary" id="id_btn_reload">Reload</button> -->
				<button type="button" class="btn btn-sm btn-primary my-1" id="id_btn_play">Play</button>
				<button type="button" class="btn btn-sm btn-primary my-1" id="id_btn_stop">Stop</button>
			</div>
		</div>
	</div>
	<div class="row border">
		<div class="col-12 col-sm-6" id="id_sheet">
			{ID_SHEET}
		</div>
		<div class="col-6 col-sm-6 border-left" id="id-div-chord-area">
			<div style="height: 45px;" class="py-1">
				<ul class="nav nav-tabs">
					<li class="nav-item">
						<a class="nav-link active small" href="#" id="id_nav_chord_flow">Chord Flow</a>
					</li>
					<li class="nav-item">
						<a class="nav-link small" href="#" id="id_nav_chord_chart">Chord Chart</a>
					</li>
				</ul>	
			</div>
			<div class="container-fluid">
				<div class="row" id="id_div_chord_flow" style="height:500px; overflow-y: auto;"></div>
				<div class="row" id="id_div_chord_chart" style="height:500px; overflow-y: auto; display: none;"></div>
			</div>
		</div>
	</div>
</div>

<div id="id_div_chord_flow_embed" 
	style="display: none; background-color: ghostwhite; height:120px; width:100%; overflow: auto; white-space: nowrap;">
</div>

<div class="footer">
	
</div>

</body>
</html>

<script type="text/javascript" src="/js/head_control.js"></script>
<script type="text/javascript" src="/js/util.js"></script>

<script type="text/javascript" src="/js/chord_lyrics_sheet.min.js"></script>
